<UserControl x:Class="WPF.UserControls.Graph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:charting="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="905.6">
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>
        <charting:Chart  Name="lineChart" Title="Line graph" VerticalAlignment="Top" Height="266" Background="SeaGreen">
            <charting:LineSeries Title="AbsentList" 
                                x:Name="myChart"  ItemsSource="{Binding}" 
                                IndependentValuePath ="WeekDay" IsSelectionEnabled="True" 
                                DependentValuePath="OpId" Margin="0,0,0,1"
                                 
             />

        </charting:Chart>

       
    </Grid>
</UserControl>
