                <RadioButton Height="37" Width="120" Grid.Row="3" Content="Search food" Grid.Column="1" Grid.RowSpan="2" Command="{Binding SearchFoodCommand}" CommandParameter="3"/>
                <TextBox x:Name="breakfastFoodName3" Padding="2" Height="37" HorizontalAlignment="Left" TextWrapping="Wrap"  Width="120" Text="{Binding Path=Name3, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" TextAlignment="Justify" Grid.Row="2" Grid.RowSpan="2" Margin="0,37.2,0,1"/>
