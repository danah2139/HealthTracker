                <Label  Grid.Column="3" Height="37" Grid.Row="1" Content="{Binding EnterMealsNodel.Protein1}" Margin="0,0.4,0,0.2" />
                <Label Height="37"  Grid.Column="4" Grid.Row="1" Content="{Binding EnterMealsNodel.Carbo1}" VerticalAlignment="Top" Margin="0,0.4,0,0" />
                <RadioButton Height="37" Width="120" Grid.Row="1" Content="Search food" Margin="0,37.4,0,1.8" Grid.Column="1" Grid.RowSpan="2" Command="{Binding SearchFoodCommand}" CommandParameter="2" />
                <TextBox x:Name="breakfastFoodName2" Padding="2" Height="37" HorizontalAlignment="Left" TextWrapping="Wrap"  Width="120" Text="{Binding Path=Name2, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" TextAlignment="Justify" Grid.Row="2" Grid.RowSpan="2" Margin="0,0.8,0,37"/>
