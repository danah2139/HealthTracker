                <Label Height="37"  Grid.Row="3" Content="{Binding EnterMealsNodel.Fat3}" VerticalAlignment="Top" Width="120" Margin="0,0.8,0,0" Grid.Column="2" RenderTransformOrigin="0.457,0.324" Grid.RowSpan="2" />
